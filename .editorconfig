# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4
quote_type = single

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all JS
[{**/*.js,**/*.mjs,**/*.ts,**/*.tsx}]
indent_style = tab
indent_size = 4

# Indentation override for all HTML
[**/*.html]
indent_style = tab
indent_size = 4

# Indentation override for all SCSS under lib directory
[**/*.scss]
indent_style = tab
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
